{
  "builders": [
    {
      "type": "docker",
      "image": "golang:latest-cross",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": ".",
      "destination": "/usr/src/github.com/hashicorp/terraform"
    },
    {
      "type": "shell",
      "inline": [
        "cd /usr/src/github.com/hashicorp/terraform",
        "make updatedeps",
        "make release",
        "ls -lah bin",
        "ls -lah pkg"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "artifice",
        "files": ["slug.tar.gz"]
      },
      {
        "type": "atlas",
        "artifact": "{{user `app_slug` }}",
        "artifact_type": "archive"
      }
    ]
  ]
}
